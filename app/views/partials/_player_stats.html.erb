<% unless data.empty? %>

    <table class="info-table player-stats-<%= season %>" cellpadding="0" cellspacing="0">
        <tr>
            <th>Player</th>
            <th>GP</th>
            <th>G</th>
            <th>A</th>
            <th>PTS</th>
            <th>PPG</th>
            <th>SHG</th>
            <th>PIMS</th>
        </tr>
        <%
        i = 0
        data.each do |value|
           unless value.blank?
                row_class = (i % 2 == 0) ? 'odd' : 'even'

                name = value['player'].to_s.split ','
                %>
                <tr class="<%=row_class%>">
                    <td><%= HTMLEntities.new.decode name[1] + name[0] %></td>
                    <td><%= value['gp'] %></td>
                    <td><%= value['g'] %></td>
                    <td><%= value['a'] %></td>
                    <td><%= value['pts'] %></td>
                    <td><%= value['ppg'] %></td>
                    <td><%= value['shg'] %></td>
                    <td><%= value['pims'] %></td>
                </tr>
                <%
                i = i + 1
            end
        end
        %>
    </table>

<% end %>